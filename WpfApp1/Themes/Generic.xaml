                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:WKChipsManager}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:WKChipsManager}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                       
                        <StackPanel Orientation="Vertical"
                                    MinHeight="24">
                            <ItemsControl x:Name="ChipsItems"
                                          ItemsSource="{TemplateBinding SelectedItems}"
                                          ItemTemplateSelector="{StaticResource templateSelector}">

                                <!--<ItemsControl.ItemTemplate>

                                    <DataTemplate>
                                        -->
                                <!--<local:WKChip Content="{Binding}">
                                            -->
                                <!--<local:WKChip.ContentTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Name}"></TextBlock>
                                                </DataTemplate>
                                            </local:WKChip.ContentTemplate>-->
                                <!--
                                        </local:WKChip>-->
                                <!--
                                        <local:WKChip Content="{Binding}"
                                                      VerticalAlignment="Center"
                                                      ContentTemplate="{Binding ChipEditorTemplate,  RelativeSource={RelativeSource AncestorType=local:WKChipsManager}}"
                                                      PropertyName="{Binding ElementiDaVisualizzare ,  RelativeSource={RelativeSource AncestorType=local:WKChipsManager}}"></local:WKChip>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>-->
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"
                                                   Width="{TemplateBinding Width}"
                                                   VerticalAlignment="Top"
                                                   Background="Yellow"
                                                   MinHeight="24">


                                        </WrapPanel>

                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                            </ItemsControl>




                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:WKChipSearch}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:WKChipSearch}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup Name="ValueStates">

                                <!--Make the Value property red when it is negative.-->
                                <VisualState Name="PopupOpenOnTextEdit">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pupListBox"
                                                                       Storyboard.TargetProperty="IsOpen"
                                                                       Duration="0">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <System:Boolean>True</System:Boolean>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>

                                    </Storyboard>

                                </VisualState>

                                <VisualState Name="PopupOpenOnFocus">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pupListBox"
                                                                       Storyboard.TargetProperty="IsOpen"
                                                                       Duration="0">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <System:Boolean>False</System:Boolean>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>


                                    </Storyboard>
                                </VisualState>

                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <StackPanel>
                            <TextBox x:Name="SearchBox"
                                     MinWidth="100">
                            </TextBox>
                            <Popup x:Name="pupListBox"
                                   PlacementTarget="{Binding ElementName=SearchBox}"
                                   StaysOpen="True"
                                   HorizontalAlignment="Center"
                                   HorizontalOffset="0"
                                   VerticalOffset="0"
                                   Width="Auto"
                                   MinWidth="450"
                                   Focusable="True"
                                   MaxHeight="250"
                                   IsOpen="False"
                                   ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                   ScrollViewer.VerticalScrollBarVisibility="Auto">

                                <!--<Popup.Visibility>
                                    <MultiBinding Converter="{StaticResource converter}"
                                                  ConverterParameter="FormatLastFirst">
                                        <Binding Path="IsFocused"
                                                 ElementName="SearchBox"
                                                 Mode="OneWay" />
                                        <Binding Path="ShowPopupOnFocus"
                                                 RelativeSource="{RelativeSource AncestorType=local:WKChipsManager}" />
                                    </MultiBinding>
                                </Popup.Visibility>-->

                                <Border Visibility="{Binding Path=IsVisible, ElementName=pupListBox, Mode=OneWay}"
                                        Background="#FFFFFF"
                                        BorderBrush="#B9B9B9">
                                    <ListBox  x:Name="ListItems"                                              
                                              ItemTemplate="{TemplateBinding DataTemplateItemsListbox}"
                                              Visibility="{Binding Path=IsVisible, ElementName=pupListBox, Mode=OneWay}">
                                        <ListBox.GroupStyle>
                                            <GroupStyle>
                                                <GroupStyle.HeaderTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Foreground="#000000"
                                                                   Background="#EFEFEF"
                                                                   FontSize="12px"
                                                                   Margin="5px"
                                                                   Text="{Binding Path=Name}" />
                                                    </DataTemplate>
                                                </GroupStyle.HeaderTemplate>
                                            </GroupStyle>
                                        </ListBox.GroupStyle>


                                    </ListBox>
                                </Border>
                            </Popup>
                        </StackPanel>


                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
