                            Height="22"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            CornerRadius="11">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CircleImageState">

                                <VisualState Name="AddButtonState">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BtnProfilePicture"
                                                                       Storyboard.TargetProperty="Background"
                                                                       Duration="0">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <ImageBrush ImageSource="images/blue-plus-icon-6.png" />
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>

                                    </Storyboard>

                                </VisualState>

                                <VisualState Name="VisualButtonStateWithImage">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BtnProfilePicture"
                                                                       Storyboard.TargetProperty="Background"
                                                                       Duration="0">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <ImageBrush ImageSource="{Binding ImageProperty}" />
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>


                                    </Storyboard>
                                </VisualState>
                                <VisualState Name="VisualButtonStateWithoutImage">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BtnProfilePicture"
                                                                       Storyboard.TargetProperty="Background"
                                                                       Duration="0">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <ImageBrush ImageSource="Images/person.png" />
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>


                                    </Storyboard>
                                </VisualState>

                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid HorizontalAlignment="Center"
                              Height="{TemplateBinding Height}"
                              Background="{TemplateBinding Background}"
                              VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="BtnProfilePicture"
                                    Height="22"
                                    Background="{TemplateBinding Background}"
                                    Grid.Column="0"
                                    HorizontalAlignment="Left">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Ellipse x:Name="PhotoUser"
                                                     Fill="{TemplateBinding Background}"
                                                     Stroke="#B9B9B9"
                                                     StrokeThickness="1"
                                                     Height="{TemplateBinding Height}"
                                                     Width="{TemplateBinding Height}" />

                                        </Grid>
                                    </ControlTemplate>

                                </Button.Template>
                            </Button>


                            <ContentPresenter  x:Name="InformationUser"
                                               Grid.Column="1"
                                               Content="{TemplateBinding Content}"
                                               ContentTemplate="{TemplateBinding ContentTemplate}"
                                               HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                               VerticalAlignment="{TemplateBinding VerticalAlignment}">

                            </ContentPresenter>

                            <TextBox x:Name="MailUserEdit"
                                     TextWrapping="Wrap"
                                     Background="{TemplateBinding Background}"
                                     Grid.Column="2"
                                     HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                     VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                     IsEnabled="{TemplateBinding IsEditable}"
                                     Text="{Binding Mail}">
                                <TextBox.Template>
                                    <ControlTemplate TargetType="TextBox">
                                        <StackPanel Margin="5 0 5 0"
                                                    Orientation="Horizontal"
                                                    Background="{TemplateBinding Background}">
                                            <TextBlock VerticalAlignment="Center"
                                                       Margin="0">&lt;</TextBlock>
                                            <ContentPresenter VerticalAlignment="Center"
                                                              Margin="0"
                                                              Content="{TemplateBinding Text}">
                                            </ContentPresenter>
                                            <TextBlock VerticalAlignment="Center"
                                                       Margin="0">&gt;</TextBlock>
                                        </StackPanel>

                                    </ControlTemplate>
                                </TextBox.Template>
                            </TextBox>

                            <Button x:Name="Delete"
                                    MinWidth="10"
                                    Margin="5,0,2,0"
                                    HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                    Width="22"
                                    Grid.Column="3"
                                    Background="Transparent"
                                    Height="22"
                                    BorderThickness="0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="11">
                                            <Border.Background>
                                                <ImageBrush ImageSource="Images/Cancel.png"></ImageBrush>
                                            </Border.Background>

                                        </Border>

                                    </ControlTemplate>
                                </Button.Template>

                            </Button>
                        </Grid>

